<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!--    <style name="AppTheme.Onboarding">-->
    <!--        <item name="android:statusBarColor">@color/colorPrimary-->
    <!--        </item> &lt;!&ndash;use same status bar color as background color (see OnboardingActivity#onCreate()&ndash;&gt;-->
    <!--    </style>-->


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevation">0dp</item>
    </style>

    <style name="SkyMeetMainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/xxlarge_text</item>
        <item name="android:textColor">@color/color_state_text</item>
        <item name="backgroundTint">@color/color_state_background</item>
        <item name="cornerRadius">@dimen/radius_button_main</item>
    </style>

    <style name="myDropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="hintTextColor">#FFF</item>
    </style>


</resources>
